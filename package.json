{
	"name": "node-rfc",
	"description": "nodejs bindings for SAP NW RFC SDK",
	"version": "0.2.0-rc4",
	"homepage": "https://github.com/SAP/node-rfc",
	"author": {
		"name": "Srdjan Boskovic",
		"email": "srdjan.boskovic@sap.com"
	},
	"engines": {
		"node": "6.x || 8.x || 10.x"
	},
	"os": [
		"!darwin"
	],
	"cpu": [
		"!arm"
	],
	"directories": {
		"doc": "doc",
		"test": "test"
	},
	"scripts": {
		"prepublishOnly": "npm ls",
		"preinstall": "npm install node-pre-gyp node-addon-api",
		"install": "node-pre-gyp install --fallback-to-build",
		"test": "mocha",
		"build": "tsc -p src/ts",
		"examples": "tsc -p examples/ts"
	},
	"binary": {
		"module_name": "sapnwrfc",
		"module_path": "./lib/binding/{platform}-{arch}",
		"host": "https://github.com/SAP/node-rfc/releases/download/",
		"remote_path": "{version}",
		"package_name": "rfc-{platform}-{arch}.tar.gz"
	},
	"license": "Apache-2.0",
	"keywords": [
		"sap",
		"rfc",
		"rfc sdk",
		"sapnwrfc",
		"sapnw",
		"node",
		"nodejs"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.wdf.sap.corp/D037732/node-rfc.git"
	},
	"dependencies": {
		"node-addon-api": "^1.3.0",
		"node-pre-gyp": "^0.10.2"
	},
	"bundledDependencies": [
		"node-pre-gyp"
	],
	"devDependencies": {
		"@babel/core": "^7.0.0-beta.51",
		"@types/node": "^10.3.4",
		"decimal.js": "^10.0.1",
		"eslint": "^4.19.1",
		"eslint-plugin-mocha": "^5.0.0",
		"mocha": "^5.2.0",
		"node-gyp": "^3.7.0",
		"prettier-eslint": "^8.8.1",
		"should": "^13.2.1",
		"typescript": "^2.9.2"
	},
	"files": [
		"lib"
	],
	"gypfile": true,
	"main": "./lib/index",
	"types": "./lib/index.d.ts"
}
